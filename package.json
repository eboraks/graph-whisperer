{
  "name": "graph-whisperer",
  "displayName": "Graph Whisperer",
  "description": "Professional-grade VS Code extension for RDF/SPARQL development, optimized for GraphDB.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Programming Languages",
    "Data Science"
  ],
  "activationEvents": [
    "onLanguage:sparql"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "graphwhisperer.runQuery",
        "title": "Graph Whisperer: Run SPARQL Query"
      },
      {
        "command": "graphwhisperer.setPassword",
        "title": "Graph Whisperer: Set Password"
      }
    ],
    "viewsContainers": {
      "panel": [
        {
          "id": "graphwhisperer",
          "title": "SPARQL Results",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "graphwhisperer": [
        {
          "type": "webview",
          "id": "graphwhisperer.results",
          "name": "Query Results"
        }
      ]
    },
    "configuration": {
      "title": "Graph Whisperer",
      "properties": {
        "graphwhisperer.endpoint": {
          "type": "string",
          "default": "http://localhost:7200/repositories/my-repo",
          "description": "URL to the GraphDB endpoint."
        },
        "graphwhisperer.username": {
          "type": "string",
          "default": "",
          "description": "Username for Basic Authentication."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build:webview && npm run compile",
    "build:webview": "vite build",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@tanstack/react-table": "^8.21.3",
    "@types/node": "^20.0.0",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@types/vscode": "^1.90.0",
    "@vitejs/plugin-react": "^5.1.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.0.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "typescript": "^5.5.0",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@uiw/react-json-view": "^2.0.0-alpha.41",
    "sparql-http-client": "^3.0.0",
    "typescript-eslint": "^8.54.0",
    "zod": "^4.3.6"
  }
}
